doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title
    link(href='lib/ionic/css/ionic.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='lib/jquery/dist/jquery.min.js')
    script(src='cordova.js')
    script(src='js/app.js')
    script(src='js/main.js')
  body(ng-app='nss-ball' ng-controller='MainCtrl')
    //Menu State
    #menu(ng-show='isMenu')
      .row
        .col
          .xtreme Xtreme Golf
      .row
        .col: button.full(ng-click='startGame()') Start Game!

    //Is Playing State
    canvas#canvas(ng-show='gameIsActive')

    //Game Over States
    #end(ng-show='isGameOver')
      .row
        .col
          .xtreme Result: {{results}}
      .row
        .col: button.full(ng-click='newGame()') Again?

